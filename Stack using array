#include <stdio.h>
#define MAX 5
int stack[MAX], top = -1;

void push() {
    int val;
    if (top == MAX - 1)
        printf("Stack Overflow\n");
    else {
        printf("Enter value: ");
        scanf("%d", &val);
        stack[++top] = val;
    }
}

void pop() {
    if (top == -1)
        printf("Stack Underflow\n");
    else
        printf("Popped %d\n", stack[top--]);
}

void display() {
    if (top == -1)
        printf("Stack Empty\n");
    else {
        printf("Stack: ");
        for (int i = top; i >= 0; i--) printf("%d ", stack[i]);
        printf("\n");
    }
}

int main() {
    int ch;
    while (1) {
        printf("\n1.Push 2.Pop 3.Display 4.Exit: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1: push(); break;
            case 2: pop(); break;
            case 3: display(); break;
            case 4: return 0;
        }
    }
}
