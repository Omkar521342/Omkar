#include <stdio.h>

int main() {
    int n, min;
    float price[50], temp;

    printf("Enter number of products: ");
    scanf("%d", &n);

    printf("Enter prices:\n");
    for (int i = 0; i < n; i++)
        scanf("%f", &price[i]);

    // Selection Sort
    for (int i = 0; i < n - 1; i++) {
        min = i;
        for (int j = i + 1; j < n; j++) {
            if (price[j] < price[min])
                min = j;
        }
        // Swap smallest element with current position
        temp = price[i];
        price[i] = price[min];
        price[min] = temp;
    }

    printf("Sorted Prices (Selection Sort):\n");
    for (int i = 0; i < n; i++)
        printf("%.2f ", price[i]);
    printf("\n");
    return 0;
}
